
<div class="product-cards feature">
  <div class="product-card narrow text bd-brand">
    <p>Just in</p>
    <i>&#10230;</i>
    <p>The Shop</p>
  </div>
  <% @products.last(3).each do |product| %>
  <%= link_to product do %>
  <div class="product-card narrow">
    <%= image_tag product.images.first %>
    <div class="overlay">
      <%= product.name %>
    </div>

    <% end %>
    <h6><%= product.name %></h6>
  </div>
  <% end %>
</div>
<div class="link right">
  <%= link_to "Shop Everything", products_path %>
</div>
